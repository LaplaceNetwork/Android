<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/item_trade_message_imageview"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:src="@drawable/baseline_check_circle_black_24dp"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="22dp"/>

    <TextView android:id="@+id/item_trade_message_address_start"
        android:layout_height="19dp"
        android:layout_width="wrap_content"
        android:text="000000000000000000"
        android:textColor="@color/color333333"
        android:textSize="@dimen/text_size_13"
        android:layout_toRightOf="@id/item_trade_message_imageview"
        android:layout_alignTop="@id/item_trade_message_imageview"
        android:layout_marginLeft="6dp"
        />

    <TextView android:id="@+id/item_trade_message_address_start_money"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="00000 XXX"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color333333"
        android:layout_alignTop="@id/item_trade_message_imageview"
        android:layout_toRightOf="@id/item_trade_message_address_start"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="18dp"/>

    <TextView android:id="@+id/item_trade_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000.00.00 00:00:00"
        android:textColor="@color/color333333"
        android:textSize="@dimen/text_size_11"
        android:layout_below="@id/item_trade_message_address_start"
        android:layout_alignLeft="@id/item_trade_message_imageview"
        android:layout_marginTop="8dp"/>

    <TextView android:id="@+id/item_trade_message_address_end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="1111111111111111111111"
        android:textSize="@dimen/text_size_10"
        android:textColor="@color/colorB8BEC9"
        android:layout_below="@id/item_trade_message_time"
        android:layout_alignLeft="@id/item_trade_message_time"/>

    <TextView android:id="@+id/item_trade_message_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:textColor="@color/color333333"
        android:textSize="@dimen/text_size_11"
        android:layout_alignTop="@id/item_trade_message_address_end"
        android:layout_toRightOf="@id/item_trade_message_address_end"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="18dp"/>

    <View android:id="@+id/item_trade_message_line"
        android:layout_height="@dimen/line_size_common"
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@color/colorE1E0E0"
        android:layout_below="@id/item_trade_message_address_end"
        android:layout_marginTop="8dp"/>

</RelativeLayout>