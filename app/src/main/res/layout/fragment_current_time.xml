<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.currenttime.CurrentTimeFragment">


    <LinearLayout android:id="@+id/current_time_input_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/current_time_input_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转入地址:"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color4A4A4A"
            />

        <TextView android:id="@+id/current_time_input_address_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x8kneut……9ejcny（交易所地址）"
            android:textSize="@dimen/text_size_15"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color4A4A4A"
            />

    </LinearLayout>

    <LinearLayout android:id="@+id/current_time_output_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/current_time_input_address_layout"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/current_time_output_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转出地址:"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color4A4A4A"
            />

        <TextView android:id="@+id/current_time_output_address_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0x8kneut……9ejcny"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color4A4A4A"
            />

    </LinearLayout>

    <LinearLayout android:id="@+id/current_time_money_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/current_time_output_address_layout"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/current_time_money_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转账金额:"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color4A4A4A"
            />

        <TextView android:id="@+id/current_time_money_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="8000个ETH"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color4A4A4A"
            />

    </LinearLayout>

    <LinearLayout android:id="@+id/current_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/current_time_money_layout"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/current_time_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间:"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color4A4A4A"
            />

        <TextView android:id="@+id/current_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2018.11.11 11:11:11"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color2087FF"
            />

    </LinearLayout>

    <LinearLayout android:id="@+id/current_time_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/current_time_layout"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/current_time_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型:"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color4A4A4A"
            />

        <TextView android:id="@+id/current_time_type_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="链上大额转账提醒"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color2087FF"
            />

    </LinearLayout>

    <LinearLayout android:id="@+id/current_time_object_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/current_time_type_layout"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/current_time_object_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对象:"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color4A4A4A"
            />

        <TextView android:id="@+id/current_time_object_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="ETH"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color2087FF"
            />

    </LinearLayout>

    <TextView android:id="@+id/current_time_market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/current_time_object_layout"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="19dp"
        android:text="代币异动提醒"
        android:textColor="@color/color022656"
        android:textSize="@dimen/text_size_18" />

    <TextView android:id="@+id/current_time_market_realtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:26"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/color98A2B3"
        android:layout_marginRight="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="19dp"
        android:layout_above="@id/current_time_market"
        />


</RelativeLayout>