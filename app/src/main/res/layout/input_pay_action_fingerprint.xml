<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="384dp">

    <ImageView android:id="@+id/pay_action_fingerprint_logo"
        android:layout_height="22dp"
        android:layout_width="22dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="19dp"
        android:background="@color/colorPrimary"/>

    <TextView android:id="@+id/pay_action_fingerprint_logo_name"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_toRightOf="@id/pay_action_fingerprint_logo"
        android:layout_alignTop="@id/pay_action_fingerprint_logo"
        android:layout_marginLeft="7dp"
        android:text="Pay"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/color022656"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pay_action_fingerprint_content"
        android:layout_below="@id/pay_action_fingerprint_logo"
        android:layout_marginTop="29dp">

        <TextView android:id="@+id/pay_action_fingerprint_wallet_address_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="交易地址"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/color333333"
            android:layout_marginLeft="19dp"
            />

        <TextView android:id="@+id/pay_action_fingerprint_wallet_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_action_fingerprint_wallet_address_name"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="19dp"
            android:text="00000000000000000000000"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/color333333"/>

        <View android:id="@+id/pay_action_fingerprint_line_one"
            android:layout_height="@dimen/line_size_common"
            android:layout_width="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="11dp"
            android:layout_below="@id/pay_action_fingerprint_wallet_address"
            android:background="@color/colorE1E0E0"/>

        <TextView android:id="@+id/pay_action_fingerprint_money_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:textColor="@color/color333333"
            android:textSize="@dimen/text_size_13"
            android:layout_below="@id/pay_action_fingerprint_line_one"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="19dp"
            />

        <TextView android:id="@+id/pay_action_fingerprint_money"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/pay_action_fingerprint_line_one"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/pay_action_fingerprint_money_name"
            android:text="0.000000000 XXX"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/color333333"
            android:layout_marginRight="18dp"
            />

        <TextView android:id="@+id/pay_action_fingerprint_money_change"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/pay_action_fingerprint_money"
            android:layout_alignParentRight="true"
            android:text="GAS: 0.000000000 XXX"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/color333333"
            android:layout_marginRight="18dp"
            />

        <View android:id="@+id/pay_action_fingerprint_line_two"
            android:layout_height="@dimen/line_size_common"
            android:layout_width="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="23dp"
            android:layout_below="@id/pay_action_fingerprint_money_change"
            android:background="@color/colorE1E0E0"/>

        <ImageView android:id="@+id/pay_action_fingerprint_image"
            android:layout_width="73dp"
            android:layout_height="72dp"
            android:background="@color/colorPrimary"
            android:layout_below="@id/pay_action_fingerprint_line_two"
            android:layout_marginTop="43dp"
            android:layout_centerHorizontal="true"/>

        <TextView android:id="@+id/pay_action_fingerprint_image_detail"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="使用指纹进行支付"
            android:textColor="@color/color022656"
            android:textSize="@dimen/text_size_13"
            android:layout_below="@id/pay_action_fingerprint_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pay_action_fingerprint_success"
        android:layout_below="@id/pay_action_fingerprint_logo"
        android:layout_marginTop="29dp"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <ImageView android:id="@+id/pay_action_fingerprint_success_image"
            android:layout_height="52dp"
            android:layout_width="52dp"
            android:src="@drawable/baseline_check_circle_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            />

        <TextView android:id="@+id/pay_action_fingerprint_success_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pay_action_fingerprint_success_image"
            android:layout_centerVertical="true"
            android:text="支付成功"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/color022656"
            android:layout_marginTop="34dp"/>

        <TextView android:id="@+id/pay_action_fingerprint_success_detail_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用Laplace Pay已为您进行了闪电支付"
            android:textColor="@color/color022656"
            android:textSize="@dimen/text_size_11"
            android:layout_below="@id/pay_action_fingerprint_success_detail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            />

    </RelativeLayout>

</RelativeLayout>