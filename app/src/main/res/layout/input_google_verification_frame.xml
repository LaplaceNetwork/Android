<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_google_verification_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/frame_google_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:orientation="vertical">


        <TextView android:id="@+id/google_verification_qrcode_textview"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="扫描二维码"
            android:gravity="center"
            android:textColor="@color/color333333"
            android:textSize="@dimen/text_size_14"
            />

        <TextView android:id="@+id/google_verification_line"
            android:layout_height="@dimen/line_size_common"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="13dp"
            android:background="@color/colorE1E0E0"/>

        <TextView android:id="@+id/google_verification_auth_textview"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="手机输入验证码"
            android:gravity="center"
            android:textColor="@color/color333333"
            android:textSize="@dimen/text_size_14"
            />

    </LinearLayout>


</RelativeLayout>
