<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView android:id="@+id/item_coin_remind_myself_exchangecouple"
        android:layout_height="32dp"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:text="测试/测试"
        android:textColor="@color/color2C467B"
        android:textSize="@dimen/text_size_13"
        android:gravity="center"/>

    <TextView android:id="@+id/item_coin_remind_myself_exchange"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:text="测试"
        android:textColor="@color/color2C467B"
        android:textSize="@dimen/text_size_13"
        android:gravity="center"/>

    <TextView android:id="@+id/item_coin_remind_myself_high"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="00"
        android:textColor="@color/color2C467B"
        android:textSize="@dimen/text_size_13"
        android:gravity="center"/>

    <TextView android:id="@+id/item_coin_remind_myself_low"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="00"
        android:textColor="@color/color2C467B"
        android:textSize="@dimen/text_size_13"
        android:gravity="center"/>

    <TextView android:id="@+id/item_coin_remind_myself_delete"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="删除"
        android:textColor="@color/color2C467B"
        android:textSize="@dimen/text_size_13"
        android:gravity="center"/>


</LinearLayout>
