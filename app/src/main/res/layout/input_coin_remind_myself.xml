<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/input_coin_remind_myself_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView android:id="@+id/input_coin_remind_myself_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_common"
        android:background="@color/colorE1E0E0"/>

    <LinearLayout android:id="@+id/input_coin_remind_myself_liner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/input_coin_remind_myself_liner_exchange_couple"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:text="交易对"
            android:textColor="@color/colorB8BEC9"
            android:textSize="@dimen/text_size_11"
            android:gravity="center"/>

        <TextView android:id="@+id/input_coin_remind_myself_liner_exchange"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:text="交易所"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/colorB8BEC9"
            android:gravity="center"/>

        <TextView android:id="@+id/input_coin_remind_myself_liner_high"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="高于"
            android:textColor="@color/colorB8BEC9"
            android:textSize="@dimen/text_size_11"
            android:gravity="center"/>

        <TextView android:id="@+id/input_coin_remind_myself_liner_low"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="低于"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/colorB8BEC9"
            android:gravity="center"/>

        <TextView android:id="@+id/input_coin_remind_myself_liner_space"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            />

    </LinearLayout>

    <ListView android:id="@+id/input_coin_remind_myself_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/input_coin_remind_myself_liner"
        android:divider="#00000000"/>

</RelativeLayout>
