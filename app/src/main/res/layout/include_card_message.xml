<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView android:id="@+id/card_message_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="测试"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color333333"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

    <TextView android:id="@+id/card_message_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="测试测试测试测试"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/color333333"/>

    <View android:id="@+id/card_message_line"
        android:layout_height="@dimen/line_size_common"
        android:layout_width="match_parent"
        android:background="@color/colorE1E0E0"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="17dp"/>

</LinearLayout>
