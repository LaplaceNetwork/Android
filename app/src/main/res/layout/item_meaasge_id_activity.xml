<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_id_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView android:id="@+id/message_id_item_top_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        />

    <RelativeLayout android:id="@+id/message_id_item_top_layout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/colorWhite">

        <TextView android:id="@+id/message_id_item_top_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/color2C467B"
            android:text="测试"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            />

        <ImageView android:id="@+id/message_id_item_top_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_rotate_action"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>


    <RelativeLayout android:id="@+id/message_id_item_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:visibility="visible">

        <TextView android:id="@+id/message_id_item_top_line"
            android:background="@color/colorE1E0E0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size_common"
            android:layout_alignParentTop="true"
            android:layout_marginRight="18dp"
            android:layout_marginLeft="23dp"/>

        <include layout="@layout/include_message_id"
            android:id="@+id/message_id_item_bottom_username"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="9dp"/>

        <include layout="@layout/include_message_id"
            android:id="@+id/message_id_item_bottom_id"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/message_id_item_bottom_username"
            android:layout_marginTop="12dp"/>

        <include layout="@layout/include_message_id"
            android:id="@+id/message_id_item_bottom_location"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/message_id_item_bottom_id"
            android:layout_marginTop="12dp"/>

        <include layout="@layout/include_message_id"
            android:id="@+id/message_id_item_bottom_homepage"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/message_id_item_bottom_location"
            android:layout_marginTop="12dp"/>

        <include layout="@layout/include_message_id"
            android:id="@+id/message_id_item_bottom_avatar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/message_id_item_bottom_homepage"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"/>


    </RelativeLayout>


</LinearLayout>
