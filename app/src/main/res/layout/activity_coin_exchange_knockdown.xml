<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".activity.monitoringcenter.activity.CoinExchangeKnockdownActivity">

    <TextView android:id="@+id/coin_exchange_knockdown_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size_common"
        android:background="@color/colorE1E0E0"/>

    <EditText
        android:id="@+id/coin_exchange_knockdown_edittext"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="搜索币种"
        android:textColor="@color/colorB8BEC9"
        android:textSize="@dimen/text_size_13"
        android:background="@drawable/coin_unusual_search"
        android:layout_below="@id/coin_unusual_line"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        />

    <LinearLayout android:id="@+id/coin_exchange_knockdown_head_title"
        android:layout_height="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/coin_exchange_knockdown_edittext"
        android:layout_marginTop="20dp">

        <TextView android:id="@+id/coin_exchange_knockdown_head_title_cointype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="币种"
            android:textColor="@color/colorB8BEC9"
            android:textSize="@dimen/text_size_11"
            android:paddingLeft="23dp"/>

        <TextView android:id="@+id/coin_exchange_knockdown_head_title_coinlimit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提醒额度"
            android:textColor="@color/colorB8BEC9"
            android:textSize="@dimen/text_size_11"
            android:gravity="center"/>

        <TextView android:id="@+id/coin_exchange_knockdown_head_title_space"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <ListView android:id="@+id/coin_exchange_knockdown_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/coin_exchange_knockdown_head_title"/>

</RelativeLayout>