<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">


    <TextView android:id="@+id/include_coin_unusual_number_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="测试测试测试"
        android:textColor="@color/color333333"
        android:textSize="@dimen/text_size_11"
        />

    <EditText
        android:id="@+id/include_coin_unusual_number_editText"
        android:layout_width="77dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@id/include_coin_unusual_number_name"
        android:layout_marginLeft="20dp"
        android:background="@drawable/coin_unusual_search"
        android:ems="10"
        android:text="0000"
        android:paddingLeft="7dp"
        android:textColor="@color/colorB8BEC9"
        android:textSize="@dimen/text_size_11"
        android:inputType="number"/>

    <TextView android:id="@+id/nclude_coin_unusual_number_unit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="测试"
        android:textSize="@dimen/text_size_11"
        android:textColor="@color/color333333"
        android:layout_toRightOf="@id/include_coin_unusual_number_editText"
        android:layout_centerVertical="true"
        android:layout_marginLeft="11dp"/>

</RelativeLayout>
