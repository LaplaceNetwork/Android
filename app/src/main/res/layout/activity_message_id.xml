<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.identity.setting.MessageIdActivity">

    <TextView android:id="@+id/message_id_summary_textview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="我的资料"
        android:gravity="center_vertical"
        android:paddingLeft="23dp"
        android:textColor="@color/colorB8BEC9"
        android:textSize="@dimen/text_size_13"/>


    <ListView android:id="@+id/message_id_listview"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:divider="#00000000"
        android:layout_below="@id/message_id_summary_textview"/>

</RelativeLayout>