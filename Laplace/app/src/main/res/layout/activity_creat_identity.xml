<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreatIdentityActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="@string/creat_identity_text"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_17" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="271dp"
        android:layout_marginTop="157dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="命名"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/colorWhite"
            android:gravity="left"/>

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_below="@id/name_textview"
            android:textSize="@dimen/text_size_11"
            android:theme="@style/EditText_0"/>

        <TextView
            android:id="@+id/password_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_name"
            android:layout_marginTop="45dp"
            android:text="密码"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/colorWhite"
            android:gravity="left"/>


        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_textview"
            android:inputType="numberPassword"
            android:textSize="@dimen/text_size_11"
            android:theme="@style/EditText_0"/>

        <TextView
            android:id="@+id/des_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_password"
            android:text="请输入6位数字密码"
            android:textSize="@dimen/text_size_11"
            android:textColor="@color/colorB8BEC9"
            android:gravity="right"/>

        <TextView
            android:id="@+id/comfir_password_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/des_textview"
            android:layout_marginTop="29dp"
            android:text="确认密码"
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/colorWhite"
            android:gravity="left"/>

        <EditText
            android:id="@+id/editText_comfir_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comfir_password_textview"
            android:inputType="numberPassword"
            android:textSize="@dimen/text_size_11"
            android:theme="@style/EditText_0"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_comfir_password"
            android:text="我已经阅读Laplace服务条款及隐私协议"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_11"
            android:theme="@style/EditText_0"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button_creat_identity"
        android:layout_width="210dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:text="创建身份"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/btn_selector_white_index"
        />

</RelativeLayout>